name: Tests

on:
  - push
  - pull_request

jobs:
  lint:
    name: Lint OpenAPI
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v2.3.4

      - name: Setup Node
        uses: actions/setup-node@2.4.1
        with:
          node-version: "16"

      - name: Lint OpenAPI
        run: npx @redocly/openapi-cli lint src/openapi.yaml
